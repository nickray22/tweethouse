<h1>New User</h1>

<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label 'Username' %>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label 'Password' %>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
